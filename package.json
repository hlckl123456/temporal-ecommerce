{
  "name": "temporal-ecommerce",
  "version": "1.0.0",
  "description": "Production-grade e-commerce order processing system using Temporal.io - demonstrating Saga pattern, long-running workflows, and distributed transaction management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "worker": "tsx watch src/worker.ts",
    "api": "tsx watch src/api/server.ts",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "temporal:start": "docker-compose up -d temporal && echo 'Temporal UI: http://localhost:8233'",
    "system:start": "npm run temporal:start && sleep 5 && concurrently \"npm run worker\" \"npm run api\"",
    "system:test": "npm run temporal:start && sleep 5 && npm run test:integration"
  },
  "keywords": [
    "temporal",
    "saga",
    "distributed-transactions",
    "workflow",
    "ecommerce",
    "microservices",
    "compensation",
    "durable-execution"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@temporalio/client": "^1.11.3",
    "@temporalio/worker": "^1.11.3",
    "@temporalio/workflow": "^1.11.3",
    "@temporalio/activity": "^1.11.3",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "dotenv": "^17.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.19",
    "@types/node": "^22.13.4",
    "@types/uuid": "^10.0.0",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.3",
    "tsx": "^4.21.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "prettier": "^3.5.0"
  }
}
